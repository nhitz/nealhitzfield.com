# Run development server
dev: 
  echo "Starting development server..."
  npm run dev

# Run development server in verbose mode
dev-verbose: 
  echo "Starting development server in verbose mode..."
  npm run dev:verbose

# Run production server
start: 
  echo "Starting production server..."
  npm run start

# Build project and write it to disk
build: 
  echo "Building project..."
  npm run build

# Preview production build
preview: 
  echo "Previewing production build..."
  npm run preview

# Astro check project for errors
check: 
  echo "Checking project for errors..."
  npm run check

# Run tests
test: 
  echo "Running tests..."
  npm run test

# Run prettier
format: 
  echo "Running prettier..."
  npm run format

