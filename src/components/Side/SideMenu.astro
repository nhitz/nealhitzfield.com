---
import SideMenuItem from "./SideMenuItem.astro";
import { playlists } from "../../lib/musicData";
import SideItemRepos from "./SideItemRepos.astro";
import SideItemProjects from "./SideItemProjects.astro";
import SideMenuSearchButton from "./SideMenuSearchButton.astro";
---

<div class="flex flex-col flex-1 gap-2">
  <div class="bg-zinc-900 rounded-lg">
    <ul>
      <SideMenuItem href="/" iconName="HomeIcon">Home</SideMenuItem>
      <SideMenuSearchButton iconName="SearchIcon">Search</SideMenuSearchButton>
    </ul>
  </div>

  <div class="bg-zinc-900 rounded-lg flex-1">
    <ul>
      <SideMenuItem
        href="#"
        iconName="MediaIcon"
        title="Collapse Neal's Stuff"
        id="nealStuffToggle"
      >
        Neal's Stuff
      </SideMenuItem>
    </ul>
    <ul class="pl-2">
      <SideItemRepos playlist={playlists[4]} />
    </ul>

    <ul class="pl-2 mt-3">
      <SideItemProjects />
    </ul>
  </div>
</div>
