---
import GreetingTitle from "../../components/GreetingTitle.svelte";
import PageHeader from "../../components/PageHeader.astro";
import Layout from "../../layouts/Layout.astro";
import PlaylistDetailedList from "../../components/PlaylistDetailedList.astro";
import PlaylistSimpleList from "../../components/PlaylistSimpleList.astro";
---








<Layout title="Music">
    <div id="playlist-container" class="relative transition-all duration-1000 bg-context"
         style="min-height:300px;--context-color:#134e4a;">
        <PageHeader/>
        <div class="relative z-10 px-6">
            <GreetingTitle client:visible greeting="My moosick"/>
            <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"></div>
            <PlaylistSimpleList/>
        </div>
    </div>
    <PlaylistDetailedList/>
</Layout>
