---
import GreetingTitle from "../components/GreetingTitle.svelte";
import HomepageCard from "../components/HomepageCard.astro";
import PageHeader from "../components/PageHeader.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
    <div id="playlist-container" class="relative transition-all duration-1000 bg-context"
         style="min-height:300px;--context-color:#134e4a;">
        <PageHeader/>
        <div class="relative z-10 px-6">
            <GreetingTitle client:visible/>
        </div>

        <div class="grid sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 p-6 bg-gradient-to-t from-zinc-900 via-zinc-900/80">
            <HomepageCard 
                imageUrl="https://cdn.dribbble.com/users/3547568/screenshots/14395014/music_jpeg.jpg"
                title="Music"
                navigateTo="music"
                extraText="Listen to your favorite music"
            />
            <HomepageCard 
                imageUrl="https://github.githubassets.com/assets/GitHub-Mark-ea2971cee799.png"
                title="Repositories"
                navigateTo="repositories"
                extraText="View your repositories"
            />
            <!-- Add more HomepageCard components as needed -->
        </div>
    </div>
</Layout>