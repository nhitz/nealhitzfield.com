---
import GreetingTitle from "../components/GreetingTitle.svelte";
import HomepageCard from "../components/HomepageCard.astro";
import PageHeader from "../components/PageHeader.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
  <div
    id="playlist-container"
    class="relative transition-all duration-1000 bg-context"
    style="min-height:300px;--context-color:#134e4a;"
  >
    <PageHeader />
    <div class="relative z-10 px-6">
      <GreetingTitle client:visible />
    </div>
    <div
      class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80"
    >
    </div>
    <div class="px-6 relative z-10 mt-4">
      <div class="flex flex-wrap mt-6 gap-4">
        <HomepageCard
          imageUrl="https://avatars.githubusercontent.com/u/67109815?s=200&v=4"
          title="Profile"
          navigateTo="github-profile"
          extraText="View Neal's profile"
        />
        <HomepageCard
          imageUrl="https://github.githubassets.com/assets/GitHub-Mark-ea2971cee799.png"
          title="Repositories"
          navigateTo="repositories"
          extraText="View Neal's repositories"
        />
        <HomepageCard
          imageUrl="https://d1csarkz8obe9u.cloudfront.net/posterpreviews/light-bulb-design-template-1c597d6775d2ff0a949c3f3ebb48e4dc_screen.jpg?ts=1626890955"
          title="Projects"
          navigateTo="projects"
          extraText="View Neal's projects"
        />
      </div>
    </div>
  </div>
</Layout>
