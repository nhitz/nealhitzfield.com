---
import GreetingTitle from "../../components/GreetingTitle.svelte";
import PageHeader from "../../components/PageHeader.astro";
import RepositoryCard from "../../components/RepositoryCard.astro";
import RepositoryItemCard from "../../components/RepositoryItemCard.astro";
import Layout from "../../layouts/Layout.astro";
import RepositoryList from "../../components/RepositoryList.astro";
import {getRepositories} from "../../lib/githubData";
---

<Layout title="Home">
    <div
            id="playlist-container"
            class="relative transition-all duration-1000 bg-context"
            style="min-height:300px;--context-color:#134e4a;"
    >
        <PageHeader />
        <div class="relative z-10 px-6">
            <GreetingTitle client:visible greeting="My Repos"/>
            <RepositoryList repositories={getRepositories()}/>
        </div>
        <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80">
        </div>
    </div>
    <div class="px-6 relative z-10 mt-4">
        <h2 class="text-2xl font-bold">The exact same repos...</h2>
        <div class="flex flex-wrap mt-6 gap-4">
            <RepositoryList />
        </div>
    </div>
</Layout>
